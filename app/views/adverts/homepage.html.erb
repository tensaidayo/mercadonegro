<div class="row">
  <div class="col-xs-8">
    <% @adverts.each do |advert| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h5>
<!--            <strong>Views: <%#= advert.quantity_view %></strong> - <%#= advert.created_at.strftime("Created:  %b %d, %Y at %H:%M") %> | <%#= advert.updated_at.strftime("Last Update: %b %d, %Y at %H:%M") %>-->
            <strong><%= advert.title %></strong>
          </h5>
        </div>

        <div class="panel-body">
          <strong>Views</strong> | <%= advert.quantity_view %><br>
          <strong>Category</strong> | <%= advert.category.description %><br>
          <td><strong>Description</strong> | <%= advert.description %></td><br>
          <td><strong>Price</strong> | R$ <%= advert.price %></td>

          <div id="lightgallery">
            <% advert.avatars.each do |p| %>
              <%= image_tag p.thumb.url, class: "img-thumbnail" %>
            <% end %>
          </div>

          <%= link_to '+ Info', advert, class: 'pull-left btn-sm btn-link' %>

        </div>

      </div>
    <% end %>
  </div>

  <div class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        Category of adverts
      </div>
      <div class="panel-body">
        <li><%= link_to 'All', "/adverts/homepage?category_id=0", class: 'btn-link' %></li>
        <% @categories.each do |category| %>
          <li><%= link_to category.description, homepage_adverts_path(category_id: category.id), class: 'btb btn-link' %></li>
        <% end %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">Search for adverts (title)</div>
      <div class="panel-body">
        <%= form_tag(homepage_adverts_path, method: 'post') do %>
          <%= text_field_tag :advert_description %>
          <%= submit_tag("Buscar") %>
        <% end %>
      </div>
    </div>

  </div>
</div>
